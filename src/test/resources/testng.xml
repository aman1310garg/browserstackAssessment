<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Assessment Test Suite" parallel="tests" thread-count="5">
    <test name="Chrome Test">
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="10"/>
        <classes>
            <class name="tests.AssessmentTest" />
        </classes>
    </test>
    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <parameter name="version" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <classes>
            <class name="tests.AssessmentTest" />
        </classes>
    </test>
    <test name="Ios Test">
        <parameter name="browser" value="Safari"/>
        <parameter name="version" value="latest"/>
        <parameter name="os" value="OS X"/>
        <parameter name="os_version" value="Sonoma"/>
        <classes>
            <class name="tests.AssessmentTest" />
        </classes>
    </test>
    <test name="Chrome_ten Test">
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <classes>
            <class name="tests.AssessmentTest" />
        </classes>
    </test>
    <test name="Opera Test">
        <parameter name="browser" value="Opera"/>
        <parameter name="version" value="latest"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="10"/>
        <classes>
            <class name="tests.AssessmentTest" />
        </classes>
    </test>
</suite>
